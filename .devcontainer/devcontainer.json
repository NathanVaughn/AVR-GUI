{
    "name": "avr-gui",
    "build": {
        "dockerfile": "Dockerfile",
        "context": "../"
    },
    "postCreateCommand": "poetry install --sync && poetry run pre-commit install --install-hooks",
    "postAttachCommand": "git config gpg.program gpg2",
    "customizations": {
        "vscode": {
            "extensions": [
                "anseki.vscode-color",
                "charliermarsh.ruff",
                "kisstkondoros.vscode-gutter-preview",
                "mhutchie.git-graph",
                "ms-azuretools.vscode-docker",
                "ms-python.black-formatter",
                "ms-python.python",
                "njqdev.vscode-python-typehint",
                "tamasfe.even-better-toml",
                "Tyriar.luna-paint"
            ]
        }
    }
}
